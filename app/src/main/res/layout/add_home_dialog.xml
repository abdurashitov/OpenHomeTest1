<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_close_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Вы можете подключится к дому"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_token_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/White_smoke"
        android:ems="10"
        android:hint=" Ввидети токен"
        android:inputType="textPersonName"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/Dark_jungle_green"
        android:textColorHint="@color/Manatee"
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <ImageView
        android:id="@+id/dialog_scan_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bx_scan_svg"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_token_edit"
        app:layout_constraintEnd_toEndOf="@+id/dialog_btn_conect"
        app:layout_constraintTop_toTopOf="@+id/dialog_token_edit" />

    <Button
        android:id="@+id/dialog_btn_conect"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_register_send"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Подключится"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_token_edit"
        app:layout_constraintTop_toBottomOf="@+id/dialog_token_edit" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Нет созданного дома?"
        android:textColor="@color/Manatee"
        app:layout_constraintEnd_toEndOf="@+id/dialog_btn_conect"
        app:layout_constraintStart_toStartOf="@+id/dialog_btn_conect"
        app:layout_constraintTop_toBottomOf="@+id/dialog_btn_conect" />

    <TextView
        android:id="@+id/dialog_create_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Создать"
        android:textColor="@color/Dark_jungle_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_btn_conect"
        app:layout_constraintStart_toStartOf="@+id/dialog_btn_conect"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />
</androidx.constraintlayout.widget.ConstraintLayout>